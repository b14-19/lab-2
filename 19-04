#lcm and gcd of three numbers
def lcm(x,y,z):
gcd2=gcd(y,z)
gcd3=gcd(x,gcd2)
lcm2=y*z//gcd2
lcm3=x*lcm2//gcd(x,lcm2)
return(lcm3,gcd3)
h=input("press;1 for two numbers of lcm or/n press:2 for three numbers lcm/n :")
if h ="2"
    x=int(input("number 1:"))
    y=int(input("number 2:"))
    z=int(input("number 3:"))
    (res1,res2)=lcm(x,y,z)
    print("the lcm of"+str(x)+"and"str(y)+"and"+str(z)")
   
